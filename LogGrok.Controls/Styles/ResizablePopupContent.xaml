<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LogGrok.Controls">
    <Style TargetType="{x:Type controls:ResizeablePopupContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ResizeablePopupContent}">
                    <Grid>
                        <AdornerDecorator>
                            <ContentPresenter/>
                        </AdornerDecorator>
                        <Thumb VerticalAlignment="Bottom" HorizontalAlignment="Right"
                            x:Name="PART_Thumb">
                            <Thumb.Template>
                                <ControlTemplate TargetType="Thumb">
                                    <ResizeGrip
                                        Visibility="Visible"
                                        IsTabStop="false" />
                                </ControlTemplate>
                            </Thumb.Template>
                        </Thumb>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>